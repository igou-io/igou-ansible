terminationGracePeriodSeconds: 30
domain:
  resources:
    requests:
    memory: 1024M
  devices:
    disks:
    - name: containerdisk
      disk:
        bus: virtio
    - name: emptydisk
      disk:
        bus: virtio
    - name: cloudinitdisk
      disk:
        bus: virtio
  volumes:
  - name: containerdisk
    containerDisk:
    image: kubevirt/fedora-cloud-container-disk-demo:latest
  - name: emptydisk
    emptyDisk:
    capacity: "22Gi"
  - name: cloudinitdisk
    cloudInitNoCloud:
      userData: |-
        #cloud-config
        password: fedora
        chpasswd: { expire: False }
